#!/usr/bin/tcsh
# Script to run analysis over a directory
# runGal and runMeas must be run first
if "$1" == "" then
    echo "usage: $0 base [-3] [-g] [-m] [-a]"
    exit(1)
endif
setenv base $1
if (! -d $base) then
    echo "creating directory $base"
    mkdir $base
    cp run_params $base
endif
if (! -e $base/run_params) then
    echo "No run_params files in $base"
    exit(1)
endif
python ../python/lsst/galaxy_shear/runShear.py $*
