#!/usr/bin/tcsh
# Script to run analysis over a directory
# runGal and runMeas must be run first
if "$2" == "" then
    echo "usage: $0 base out_cat"
    exit(1)
endif
setenv base $1
if (! -d $base) then
    echo "No directory found: $base"
    exit(1)
endif
if (! -e $base/run_params) then
    echo "No run_params files in $base"
    exit(1)
endif
python $GALAXY_SHEAR_EXPERIMENTS_DIR/bin/analyzeShearTest.py $base $2
